{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-sucess">
            {{ message }}
        </div>
    {% endfor %}

<h2>Lista wszystkich </h2>
<table class="table table-striped">
    <thead>
    <tr>
        <td>ID</td>
        <td>Title</td>
        <td>Actions</td>
    </tr>
    </thead>
    <tbody>
    {% for post in posts %}
        <tr>
            <td>{{ post.id }}</td>
           <td>
               <a href="{{ path('post.show', {id: post.id}) }}"> {{ post.title }}</a>
           </td>
            <td>
                <a class="text-danger" href="{{ path('post.delete', {id: post.id}) }}">Delete</a>
            </td>

        </tr>
    </tbody>
    {% endfor %}
</table>
{% endblock %}
